<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.prantae.proflo_u.Login3Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="50dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color5"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/semibold"
                android:text="Enter Code"
                android:textColor="@android:color/black"
                android:transitionName="transition_title_text"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:transitionName="transition_cross"
                />
            <TextView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/semibold"
                android:text="* * * * * *"
                android:textColor="#FAC604"
                android:transitionName="transition_title_text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/semibold"
                android:text="* * * * * *"
                android:textColor="#FAC604"
                android:transitionName="transition_title_text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:text="We have sent you an sms on +91 123456789 \nwith 6 digit verification code"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                />
            <com.chaos.view.PinView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                app:itemCount="6"
                app:itemWidth="50dp"
                app:itemHeight="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="45dp"
                app:lineColor="#272727"
                android:itemBackground="#f5f5f5"
                style="@style/PinWidget.PinView"
                android:inputType="number"
                android:cursorVisible="true"
                app:cursorColor="@android:color/black"
                app:hideLineWhenFilled="true"
                app:itemRadius="5dp"
                />
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pin"
                android:text="Did not recieve the code?"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="130dp"
                />
            <TextView
                android:id="@+id/resendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5"
                android:text="Re-send"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#F64B15"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="180dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/text4"
                android:layout_marginTop="160dp"
                android:background="#656565"
                >
                <TextView
                    android:id="@+id/acount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="90dp"
                    android:fontFamily="@font/semibold"
                    android:text="Don't have an account?"
                    android:textColor="@android:color/black"
                    android:transitionName="transition_text1"
                    />
                <TextView
                    android:id="@+id/registerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="265dp"
                    android:fontFamily="@font/semibold"
                    android:text="Register"
                    android:textColor="#F64B15"

                    />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>