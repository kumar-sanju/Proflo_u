<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.prantae.proflo_u.RegisterActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="50dp"
            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color5"
                    >
                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/semibold"
                        android:text="You need a Proflo-U\n  account to contiue"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/signupBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign up with phone or email"
                        android:background="@drawable/next_btn"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:elevation="5dp"
                        />

                    <TextView
                        android:id="@+id/or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/signupBtn"
                        android:fontFamily="@font/semibold"
                        android:text="OR"
                        android:layout_marginTop="10dp"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/googleBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/or"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/google1" />
                    <ImageView
                        android:id="@+id/facebookBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/or"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/facebook" />
                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/facebookBtn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:text="By signing up, you confirm that you agree to our \nTerms of use and have  read and understood our \n                                 Private Policy."
                        android:textColor="@android:color/black"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/tag"
                        android:layout_marginTop="5dp"
                        android:background="#656565"
                        >
                        <TextView
                            android:id="@+id/acount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="90dp"
                            android:fontFamily="@font/semibold"
                            android:text="Already have an account?"
                            android:textColor="@android:color/black"
                            />
                        <TextView
                            android:id="@+id/loginText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="275dp"
                            android:fontFamily="@font/semibold"
                            android:text="Login"
                            android:textColor="#F64B15"
                            />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
        </androidx.cardview.widget.CardView>

</RelativeLayout>